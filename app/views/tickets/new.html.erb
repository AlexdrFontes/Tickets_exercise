<div class="col-xs-12">
  <%= simple_form_for ([@event, @ticket]) do |f| %>
   <%= f.error_notification %>
    <div class="container-button">
      <div class="form-inputs">
        <%= f.input :email %>
        <%= f.input :number_of_tickets %>
      </div>
      <div class="btn-medium">
        <%= f.submit 'Buy Ticket', :class => 'btn', style:"color: grey" %>
      </div>
    </div>
  <% end %>
</div>
